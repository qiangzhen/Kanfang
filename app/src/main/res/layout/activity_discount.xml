<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#3ea4a5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_back_normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="打折优惠"
            android:textColor="#fff"
            android:textSize="24sp" />


    </FrameLayout>

    <!--头部结束-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="25dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dis_area"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:drawablePadding="-30dp"
            android:drawableRight="@drawable/title_bar_arrow_nor"
            android:gravity="center"
            android:text="区域"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_dis_type"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:drawablePadding="-30dp"
            android:drawableRight="@drawable/title_bar_arrow_nor"
            android:gravity="center"
            android:text="类别"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_dis_price"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:drawablePadding="-30dp"
            android:drawableRight="@drawable/title_bar_arrow_nor"
            android:gravity="center"
            android:text="价格"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_dis_more"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:drawablePadding="-30dp"
            android:drawableRight="@drawable/title_bar_arrow_nor"
            android:gravity="center"
            android:text="打折"
            android:textColor="#000"
            android:textSize="20sp" />
    </LinearLayout>
    <!--不同选项结束-->


    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/lv_dis"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.handmark.pulltorefresh.library.PullToRefreshListView>

</LinearLayout>